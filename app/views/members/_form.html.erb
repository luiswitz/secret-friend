<div class="member">
  <div class="row">
    <%= form_for member, remote: true do |f| %>
      <%= f.hidden_field :campaign_id %>
      <div class="col s12 m5 input-field">
        <%= f.label :name, class: "active" %>
        <% if member.persisted? %>
          <%= f.text_field :name, class: "validate", onchange: '$(this).submit()' %>
        <% else %>
          <%= f.text_field :name, class: "validate", autofocus: true %>
        <% end %>
      </div>
      <div class="col s12 m5 input-field">
        <%= f.label :email, class: "active"%>
        <%= f.email_field :email, class: "validate", onchange: '$(this).submit()' %>
      </div>
      <% if member.persisted? %>
        <div class="col s3 offset-s3 m1 input-field">
          <i class="material-icons icon <%= (member.open)? 'opened' : '' %>">visibility</i>
        </div>
        <div class="col s3 m1 input-field">
          <%= link_to member, method: :delete, remote: true do %>
            <i class="material-icons icon">delete</i>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
