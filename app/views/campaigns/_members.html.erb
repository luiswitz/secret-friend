<div class="member_list" data-behavior="member-list">
  <% @campaign.members.each do |m| %>
    <div class="member"  data-behavior="member" data-id="<%= m.id %>">
      <div class="row">
        <div class="col s12 m5 input-field">
          <input name="name" type="text" class="validate" value="<%= m.name %>" 
                                                          data-behavior="member-name-input">
                                                          <label for="name" class="active">Name</label>
        </div>
        <div class="col s12 m5 input-field">
          <input id="email" type="email" class="validate" value="<%= m.email %>" 
                                                          data-behavior="member-email-input">
                                                          <label for="email" class="active" data-error="Wrong format">Email</label>
        </div>
        <div class="col s3 offset-s3 m1 input-field">
          <i class="material-icons icon <%= (m.open)? 'opened' : '' %>">visibility</i>
        </div>
        <div class="col s3 m1 input-field">
          <a href="#" class="remove_member" data-behavior="member-delete">
            <i class="material-icons icon">delete</i>
          </a>
        </div>
      </div>
    </div>
  <% end %>
</div>
